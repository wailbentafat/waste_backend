# Database Configuration
POSTGRES_URL=postgresql://postgres:password@localhost:5432/waste_analytics
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=30

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/waste_bins
MONGODB_DB_NAME=waste_bins

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=waste_system
MQTT_PASSWORD=your_mqtt_password
MQTT_KEEPALIVE=60

# Security
SECRET_KEY=your_super_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload & YOLO
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads/detections
YOLO_MODEL_PATH=./ml/models/trash_detection.pt
YOLO_CONFIDENCE_THRESHOLD=0.6
YOLO_DEVICE=cpu

# API Configuration
API_V1_STR=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200